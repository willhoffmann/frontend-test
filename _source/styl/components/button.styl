/*
* Button
*
*/


.btn
  -webkit-border-radius 2px
  -moz-border-radius 2px
  -o-border-radius 2px
  -ms-border-radius 2px
  border-radius 2px


.btn-purple
  background-color $purple
  border-color $purple
  color #fff !important

  &:hover,
  &:focus
    background-color $purple-dark
    border-color $purple-dark
    color #fff !important

.btn-primary
  color #fff !important
  margin-bottom 10px
  margin-top 15px
  max-width 300px
  padding 15px
